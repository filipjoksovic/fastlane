<!DOCTYPE html>
<html lang="en">

<%- include("components/head.ejs")%>

    <body>

        <%- include ('components/header.ejs') %>
            <div id="app">

                <div class="container mt-3 d-flex justify-content-between align-items-center flex-column">
                    <div id="nav-tab" class=" nav d-flex justify-content-between w-100 my-3 p-2 " role="tablist">
                        <button class="nav-link nav-custom active" id="nav-home-tab" data-bs-toggle="tab"
                            data-bs-target="#add-product" type="button" role="tab">Add a product</button>
                        <button class="nav-link nav-custom" id="nav-contact-tab" data-bs-toggle="tab"
                            data-bs-target="#add-discount" type="button" role="tab">Add a discount</button>

                    </div>
                    <div class=" nav d-flex justify-content-between w-100 my-3 p-2">
                        <button class="nav-link nav-custom" id="nav-home-tab" data-bs-toggle="tab"
                            data-bs-target="#view-products" type="button" role="tab">View products</button>
                        <button class="nav-link nav-custom" id="nav-profile-tab" data-bs-toggle="tab"
                            data-bs-target="#view-users" type="button" role="tab">View users</button>
                    </div>
                </div>
                <div class="container mt-5 neumorphic">
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="add-product" role="tabpanel"
                            aria-labelledby="nav-home-tab">
                            <h1><i class="fas fa-plus"></i> Add a product</h1>

                            <form action="/addProduct" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="name">Product name</label>
                                            <input type="text" name="name" id="name" class="form-control neumorphic">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="price">Product price</label>
                                            <input type="number" name="price" id="price" class="form-control neumorphic">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea name="description" id="description"
                                        class="form-control neumorphic"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="category">Category</label>
                                            <select id="categories" name="category" id="category"
                                                class="form-control neumorphic"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="">Product image</label>
                                            <label for="image" class="neumorphic form-control">Upload</label>
                                            <input type="file" id="image" name="image" class="neumorphic file" accept="image/*">
                                        </div>
                                    </div>

                                </div>

                                <button class="btn neumorphic" type="submit">Submit</button>
                            </form>




                        </div>
                        
                        <div class="tab-pane fade" id="add-discount" role="tabpanel" aria-labelledby="nav-contact-tab">
                            <h1><i class="fas fa-tag"></i> Add a discount</h1>
                            <form action="/addDiscount" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="name">Name</label>
                                            <input type="text" name="name" class="neumorphic form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="discount">Discount</label>
                                            <input type="text" name="discount" class="neumorphic form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="date_start">Date start</label>
                                            <input type="date" name="date_start" id="date_start"
                                                class="neumorphic form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="date_end">Date end</label>
                                            <input type="date" id="date_end" name="date_end"
                                                class="neumorphic form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row bg-transparent">
                                    <div class="col-md-7 bg-transparent">
                                        <button type="button" class="btn neumorphic" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal" onclick="fillProducts()">
                                            Pick products
                                        </button>
                                    </div>
                                    <input type="hidden" name="products" id="products">
                                    <div class="col-md-5 bg-transparent">
                                        <button class="btn neumorphic" type="submit">Submit</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="tab-pane fade show" id="view-products" role="tabpanel"
                            aria-labelledby="nav-home-tab">
                            <h1> <i class="fas fa-table"></i> View products</h1>
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <th>Product ID</th>
                                        <th>Category</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th class="text-center">Image</th>
                                    </thead>
                                    <tbody id="products-table"></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade show" id="view-users" role="tabpanel" aria-labelledby="nav-home-tab">
                            <h1><i class="fas fa-users"></i> View users</h1>
                            <div class = "table responsive">
                                <table class = "table table-bordered">
                                    <thead>
                                        <th>ID</th>
                                        <th>First name</th>
                                        <th>Last name</th>
                                        <th>Email</th>
                                        <th>Role ID</th>
                                    </thead>
                                    <tbody id = "usersTable">
                                            
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <!-- Button trigger modal -->


            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-fullscreen">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Product picker</h5>

                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body bg-transparent">
                            <p>Pick products that will go on discount. In case of products already being discounted,
                                existing discount will get overwritten.</p>
                            <div id="product-list" class="mt-3">
                                <h6>Available products</h6>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary neumorphic text-dark"
                                data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary neumorphic text-dark"
                                onclick="addToDiscount()">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <script src="public/js/admin.js"></script>
    </body>

</html>