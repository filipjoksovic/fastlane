<!DOCTYPE html>
<html lang="en">
<%- include("components/head.ejs")%>

    <body>
        <%- include ('components/header.ejs') %>

            <div class="container mt-3 neumorphic">
                <h1>Cart Checkout</h1>
                <div id="cartForm">
                    <form action="/cart" id="orderForm" method="POST" class="my-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname">First name</label>
                                    <input type="text" name="fname" class="form-control neumorphic"
                                        value="<%= user.fname %>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lname">Last name</label>
                                    <input type="text" name="lname" class="form-control neumorphic"
                                        value="<%= user.lname %>">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Phone number</label>
                                    <input type="text" name="phone" class="form-control neumorphic">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" name="email" class="form-control neumorphic"
                                        value="<%= user.email%>">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 bg-transparent">
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input type="text" name="address" class="form-control neumorphic">
                                </div>
                            </div>
                            <div class="col-md-4 bg-transparent">
                                <div class="form-group">
                                    <label for="country">Country</label>
                                    <input type="text" name="country" class="form-control neumorphic">
                                </div>
                            </div>
                            <div class="col-md-2 bg-transparent">
                                <div class="form-group">
                                    <label for="zip">Zip code</label>
                                    <input type="text" name="zip" class="form-control neumorphic">
                                </div>
                            </div>
                        </div>
                        <h5 id="cartSum">Sum: </h5>
                        <input type="hidden" id="cart_sum" name="cart_sum">
                        <input type="hidden" id="cart_items" name="cart_items">
                        <button type="button" class="btn neumorphic" onclick="createOrder()">Order</button>
                    </form>
                </div>
                <h1 class="bg-transparent">Items in cart</h1>
                <div id="cartProducts" class="row bg-transparent">

                </div>
            </div>
            <script src="public/js/cartpage.js"></script>
    </body>

</html>